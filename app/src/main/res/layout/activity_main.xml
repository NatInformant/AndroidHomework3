<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/task_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/task_field_background"
        android:padding="10dp"
        android:textSize="20sp"
        tools:text="Поле для выражения" />

    <GridLayout
        android:id="@+id/buttons_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:columnCount="4"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="1"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="2"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="3"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="27dp"
            android:paddingVertical="15dp"
            android:text="+"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="4"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/five_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="5"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="6"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="32dp"
            android:paddingVertical="15dp"
            android:text="-"
            android:textSize="35sp" />
        <TextView
            android:id="@+id/seven_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="7"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/eight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="8"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/nine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="9"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/divide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="/"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/backspace_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:text="⌫"
            android:textSize="35sp" />
        <TextView
            android:id="@+id/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="0"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/point_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="35dp"
            android:paddingVertical="15dp"
            android:text="."
            android:textSize="35sp" />

        <TextView
            android:id="@+id/multiply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="*"
            android:textSize="35sp" />
    </GridLayout>

    <TextView
        android:id="@+id/get_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:paddingHorizontal="35dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Получить итоговый ответ"
        android:textSize="25sp" />
</LinearLayout>